doctype
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{title} - Griffin Gamification
        include snippets/stylesheets.jade
    body(class="gray-bg")
        div(class="middle-box text-center animated fadeInDown")
            h1 #{status}
            h3(class="font-bold") #{name}
            div(class="error-desc")
                | #{desc}
                form(class="form-inline m-t" role="form" action="#{baseURL}")
                    button(type="submit" class="btn btn-primary") Return
    include snippets/scripts.jade
